<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="main.dojavafx.Controller.LoginController"
      spacing="10" alignment="CENTER" padding="20">

    <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Phone:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPhone" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Login" onAction="#handleLogin"/>

    <Label fx:id="lblError" textFill="red"/>
</VBox>
