<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" padding="20"
      fx:controller="main.dojavafx.Controller.ProductController">

    <Label text="Product Form" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrice" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Stock:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtStock" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Category:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboCategory" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" fx:id="btnSave" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
